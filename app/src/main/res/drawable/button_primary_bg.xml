    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#02CAB7" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#02CAB7" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#03DAC5" />
            <corners android:radius="3dp" />
        </shape>
    </item>
</selector>